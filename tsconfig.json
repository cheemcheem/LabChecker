{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./built",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "allowJs": true,
    "target": "es2018",
    "lib": [
      "dom",
      "es2016"
    ]
  },
  "exclude": [
    "node_modules",
    "public",
    "built"
  ],
  "include": [
    "./app.ts",
    "./bin",
    "./routes",
    "./test",
    "./utilities/**/*"
  ]
}