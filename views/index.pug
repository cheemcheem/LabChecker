extends layout

block content
    div.header
        h2#title List of PCS
        input#search(placeholder="  Search Here")
    div.content
        select#labSelector
            optgroup(label="John Honey")
                option(value="JH105") JH105 Quiet
                option(value="JH103") JH103 Goldfish
                option(value="JH110") JH110 Main
                option(value="Morrison") Morrison
            optgroup(label="Jack Cole")
                option(value="JC035") JC035 Main

        svg.map#JC035
        svg.map#JH105.visible
        svg.map#JH110
        svg.map#JH103
        svg.map#Morrison

        table
            thead
                tr
                    th Address
                    th Users
            tbody#pcTableBody
                each pc in pcList
                    tr.pc
                        td.address #{pc}
                        td.users
    script(src='/javascripts/pcScript.js')


