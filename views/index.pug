extends layout
include indexCards

block prepend header
    .row
        .col-12
            h1 Kathan Cheema
        .col-12
            p Welcome to my website!
block content
    .row.mb-3
        .col
            .card-deck
                .card.mb-3(style="background: var(--main-bg-color); outline: 4px solid var(--dark-color);")
                    .card-header
                        h2.card-title What this is.
                        h3.card-subtitle This is a website showcasing my portfolio.
                    .card-footer.text-right(style="border-color: var(--dark-color);")
                        small.text-muted(style="color: var(--text-color)!important;")
                            span="Recruiters "
                            a(href="/personal")="this"
                            span=" way."
    .row.mb-3
        .col
            .card-deck
                +dark_card("LinkedIn", "View my profile", "@kathancheema", "https://www.linkedin.com/in/kathancheema/").
                +dark_card("GitHub", "See my repos", "@cheemcheem", "https://github.com/cheemcheem")
                +dark_card("Email", "Contact me ", "kathan@cheem.uk", "mailto:kathan@cheem.uk")
